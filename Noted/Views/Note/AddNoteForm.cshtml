
@{
    ViewBag.Title = "AddNoteForm";
}

<h2>Please Add New Note</h2>

<div class="container">
    <div class="row">
        <form class="form-signin" action="../Note/AddNote" method="post">
            <h3 class="form-signin-heading">Add Note Here</h3>
           @ViewBag.Message
            <div class="form-group">
                <label for="inputHeader">Header</label>
                @Html.TextBox("HeaderTxt", null, new { @class = "form-control", @placeholder = "Note Title", @required = "true", @autofocus = "true", @maxlenght = "50" })
            </div>
            <div class="form-group">
                <label for="inputBody">Body</label>
                @Html.TextArea("BodyTxt", null, new { @class = "form-control", @placeholder = "Note Content", @required = "true", @maxlenght = "500" })
            </div>
            <div class="form-group">
                <label for="inputDate">Set Reminder</label>
                @Html.TextBox("ReminderTxt", null, new { @class = "form-control", @placeholder = "Reminder Date", @type = "date" })

            </div>
            <div class="btn-group btn-group-lg" role="group">
                <button class="btn btn-lg btn-danger" type="reset">Cancel</button>
                <button class="btn btn-lg btn-success" type="submit">Add Note</button>
            </div>

            </form>
</div>
</div>